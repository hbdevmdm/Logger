<resources>

    <!-- Base application theme. -->
    <style name="LoggerAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/logger_colorPrimary</item>
        <item name="colorPrimaryDark">@color/logger_colorPrimaryDark</item>
        <item name="colorAccent">@color/logger_colorAccent</item>
    </style>

    <style name="AppSwitchTheme" parent="Theme.AppCompat.Light">

        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/logger_colorPrimary</item>
        <item name="colorPrimaryDark">@color/logger_colorPrimaryDark</item>
        <item name="colorAccent">@color/logger_colorAccent</item>
        <item name="android:windowBackground">@color/black_trans</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="PopupMenuOverlapAnchor" parent="@style/Theme.AppCompat.Light">
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>
</resources>
